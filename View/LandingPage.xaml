<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectCF_Mobile_Version.View.LandingPage"
             Title="LandingPage"
             xmlns:viewmodel="clr-namespace:ProjectCF_Mobile_Version.ViewModel"
             x:DataType="viewmodel:LandingPage_VM">
    <Grid RowDefinitions="*,*,*,*">
        <Button Grid.Row="0" Text="ViewProfile" Command="{Binding GoToViewProfileCommand}"/>
        <Button Grid.Row="1" Text="ViewWorktime" Command="{Binding GoToWorktimeCommand}"/>
        <Button Grid.Row="2" Text="ViewSalary" Command="{Binding GoToViewSalaryCommand}"/>
        <Button Grid.Row="3" Text="ViewMessaging" Command="{Binding GoToMessagingCommand}"/>
    </Grid>
</ContentPage>